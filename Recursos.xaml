    <Color x:Key="BotonPresionado">#FF329C1B</Color>
    <Color x:Key="FondoBarras">#2A646464</Color>
    <Border x:Key="GrosorBordes" BorderThickness="5"/>
    <CompositeTransform x:Key="valorBarras" Rotation="-90"/>
